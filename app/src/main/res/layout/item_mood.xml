<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Mood Emoji -->
        <TextView
            android:id="@+id/text_mood_emoji"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="ðŸ˜Š"
            android:textSize="32sp"
            android:gravity="center"
            android:background="@drawable/bg_mood_emoji"
            android:layout_marginEnd="16dp"
            tools:text="ðŸ˜Š" />

        <!-- Mood Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_mood_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Happy"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="?android:attr/textColorPrimary"
                tools:text="Happy" />

            <TextView
                android:id="@+id/text_mood_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sep 28, 12:45 PM"
                android:textSize="12sp"
                android:textColor="?android:attr/textColorSecondary"
                android:layout_marginTop="2dp"
                tools:text="Sep 28, 12:45 PM" />

            <TextView
                android:id="@+id/text_mood_note"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Feeling great today!"
                android:textSize="14sp"
                android:textColor="?android:attr/textColorSecondary"
                android:layout_marginTop="4dp"
                android:maxLines="2"
                android:ellipsize="end"
                android:visibility="gone"
                tools:text="Feeling great today!"
                tools:visibility="visible" />

        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btn_share_mood"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_share"
                android:contentDescription="@string/cd_share_mood"
                android:layout_marginEnd="4dp" />

            <ImageButton
                android:id="@+id/btn_delete_mood"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_delete"
                android:contentDescription="@string/cd_delete_mood"
                android:layout_marginStart="4dp" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
