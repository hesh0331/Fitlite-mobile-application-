<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    tools:context=".ui.HomeFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:paddingBottom="24dp">

            <!-- Header Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="20dp"
                android:paddingHorizontal="4dp">

                <!-- Profile Picture -->
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imageProfile"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/ic_profile_placeholder"
                    app:civ_border_width="3dp"
                    app:civ_border_color="@color/accent_orange"
                    android:layout_marginEnd="16dp" />

                <!-- Welcome Text -->
                <TextView
                    android:id="@+id/textWelcome"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Welcome, Heshani 👋"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary_light"
                    android:maxLines="2"
                    android:ellipsize="end" />

            </LinearLayout>

            <!-- Progress Section -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="@color/surface_light"
                android:layout_marginHorizontal="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:id="@+id/text_progress_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/habits_progress_title"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary_light"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:id="@+id/text_progress_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 / 0 completed"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary_light"
                        android:layout_marginBottom="12dp" />

                    <ProgressBar
                        android:id="@+id/progress_bar_habits"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="16dp"
                        android:max="100"
                        android:progress="0"
                        android:progressTint="@color/accent_orange"
                        android:progressBackgroundTint="@color/surface_dark"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Main Content Section -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/surface_light">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Today's Tasks"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary_light"
                        android:layout_marginBottom="16dp" />

                    <!-- Quick Actions -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginTop="12dp"
                        android:layout_marginHorizontal="4dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="80dp"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:background="@drawable/rounded_background_orange"
                            android:layout_marginEnd="6dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="🏃"
                                android:textSize="28sp"
                                android:layout_marginBottom="4dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Habits"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:textColor="@color/white" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="80dp"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:background="@drawable/rounded_background_green"
                            android:layout_marginStart="3dp"
                            android:layout_marginEnd="3dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="😊"
                                android:textSize="28sp"
                                android:layout_marginBottom="4dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Mood"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:textColor="@color/white" />

                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Hydration Reminders Section -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="@color/surface_light"
                android:layout_marginHorizontal="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="💧 Hydration Reminders"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary_light"
                        android:layout_marginBottom="20dp" />

                    <!-- Toggle Reminders -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="20dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Enable Reminders"
                            android:textSize="16sp"
                            android:textColor="@color/text_primary_light" />

                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/switch_hydration_reminders"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:thumbTint="@color/accent_orange"
                            app:trackTint="@color/accent_orange_light" />

                    </LinearLayout>

                    <!-- Interval Selector -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Choose how often you want to be reminded:"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary_light"
                        android:layout_marginBottom="12dp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/layout_interval_selector"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        app:boxStrokeColor="@color/accent_orange"
                        app:hintTextColor="@color/accent_orange"
                        app:boxBackgroundColor="@color/surface_light">

                        <AutoCompleteTextView
                            android:id="@+id/spinner_interval"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="none"
                            android:enabled="false"
                            android:hint="Every 30 minutes"
                            android:textColor="@color/text_primary_light"
                            android:background="@color/surface_light" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Action Buttons -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="end">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_test_notification"
                            android:layout_width="wrap_content"
                            android:layout_height="48dp"
                            android:text="Test"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_marginEnd="12dp"
                            android:enabled="true"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            app:strokeColor="@color/accent_orange"
                            app:strokeWidth="2dp"
                            android:textColor="@color/accent_orange"
                            app:cornerRadius="8dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_save_hydration_settings"
                            android:layout_width="wrap_content"
                            android:layout_height="48dp"
                            android:text="Save"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:enabled="true"
                            app:backgroundTint="@color/accent_orange"
                            app:cornerRadius="8dp" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Recent Activity Section -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="80dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/surface_light">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Recent Activity"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary_light"
                        android:layout_marginBottom="16dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No recent activity yet. Start by adding your first habit!"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary_light"
                        android:gravity="center"
                        android:padding="20dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


</androidx.coordinatorlayout.widget.CoordinatorLayout>
