<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="32dp"
    android:background="@color/background_light">

    <!-- Illustration -->
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="294dp"
        android:layout_height="208dp"
        app:srcCompat="@drawable/onbording_screen01" />

    <!-- Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/onboarding_habits_title"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <!-- Description -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/onboarding_habits_description"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:gravity="center"
        android:lineSpacingExtra="4dp"
        android:maxWidth="300dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:id="@+id/habitsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/cbHydration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Drink 8 glasses of water"
                android:padding="8dp"
                android:textColor="@color/black"
                android:buttonTint="@color/black" />

            <CheckBox
                android:id="@+id/cbSteps"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Walk 10,000 steps"
                android:padding="8dp"
                android:textColor="@color/black"
                android:buttonTint="@color/black" />

            <CheckBox
                android:id="@+id/cbSleep"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sleep 7-8 hours"
                android:padding="8dp"
                android:textColor="@color/black"
                android:buttonTint="@color/black" />

            <CheckBox
                android:id="@+id/cbWorkout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Exercise 30 minutes"
                android:padding="8dp"
                android:textColor="@color/black"
                android:buttonTint="@color/black" />

            <CheckBox
                android:id="@+id/cbMindfulness"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Meditate or stretch"
                android:padding="8dp"
                android:textColor="@color/black"
                android:buttonTint="@color/black" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>
