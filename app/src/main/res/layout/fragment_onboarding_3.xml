<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/background_light">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="24dp">

        <!-- Illustration -->
        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="280dp"
            android:layout_height="180dp"
            android:layout_marginBottom="32dp"
            android:contentDescription="@string/cd_onboarding_hydration"
            app:srcCompat="@drawable/onbording_screen03" />

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/onboarding_hydration_title"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- Description -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/onboarding_hydration_description"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:gravity="center"
            android:lineSpacingExtra="4dp"
            android:maxWidth="320dp"
            android:layout_marginBottom="32dp" />

        <!-- Food Recommendations Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rounded_card_background"
            android:padding="20dp"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/food_recommendations_title"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <CheckBox
                    android:id="@+id/foodFruits"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/food_fruits"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:buttonTint="@color/black"
                    android:padding="8dp"
                    android:layout_marginBottom="4dp" />

                <CheckBox
                    android:id="@+id/foodVegetables"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/food_vegetables"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:buttonTint="@color/black"
                    android:padding="8dp"
                    android:layout_marginBottom="4dp" />

                <CheckBox
                    android:id="@+id/foodProtein"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/food_protein"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:buttonTint="@color/black"
                    android:padding="8dp"
                    android:layout_marginBottom="4dp" />

                <CheckBox
                    android:id="@+id/foodWholeGrains"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/food_whole_grains"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:buttonTint="@color/black"
                    android:padding="8dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Diet Preference Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rounded_card_background"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hydration_questions_title"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="16dp" />

            <RadioGroup
                android:id="@+id/rgDietPreference"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/rbVeg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:buttonTint="@color/black"
                    android:text="@string/diet_veg"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:padding="8dp" />

                <RadioButton
                    android:id="@+id/rbNonVeg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:buttonTint="@color/black"
                    android:text="@string/diet_non_veg"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:padding="8dp" />

                <RadioButton
                    android:id="@+id/rbVegan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/black"
                    android:text="@string/diet_vegan"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:padding="8dp" />
            </RadioGroup>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
